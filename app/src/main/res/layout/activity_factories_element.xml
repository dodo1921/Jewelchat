<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

	<android.support.v7.widget.CardView
		android:id="@+id/card_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="center"
		android:layout_margin="5dp"
		android:elevation="3dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<RelativeLayout
				android:id="@+id/factory"
				android:layout_width="match_parent"
				android:layout_height="125dp"
				android:background="@drawable/factory_bkg">

				<ImageView
					android:id="@+id/thumbnail"
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:src="@drawable/t15"
					android:layout_centerInParent="true"
					/>

				<ProgressBar
					android:id="@+id/factory_on"
					style="?android:attr/progressBarStyleLarge"
					android:layout_width="125dp"
					android:layout_height="125dp"
					android:visibility="visible"
					android:layout_centerInParent="true" />

				<TextView
					android:id="@+id/factory_timer"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="14:05 min  "
					android:textSize="20dp"
					android:visibility="visible"
					android:textColor="@android:color/white"
					android:layout_alignParentRight="true"
					android:layout_alignParentBottom="true"
					/>

			</RelativeLayout>

			<LinearLayout
				android:id="@+id/factory_details"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:visibility="visible"
				android:orientation="vertical">

				<RelativeLayout
					android:id="@+id/line1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:orientation="horizontal">

						<TextView
							android:id="@+id/quantity1"
							android:layout_width="75dp"
							android:layout_height="wrap_content"
							android:text="9"
							android:gravity="center"
							android:textSize="20dp"/>

						<ImageView
							android:id="@+id/material1"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:src="@drawable/t15"/>

						<ImageView
							android:id="@+id/tick1"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:layout_marginLeft="50dp"
							android:src="@drawable/tick"/>


					</LinearLayout>
				</RelativeLayout>

				<RelativeLayout
					android:id="@+id/line2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:orientation="horizontal">

						<TextView
							android:id="@+id/quantity2"
							android:layout_width="75dp"
							android:layout_height="wrap_content"
							android:text="125"
							android:gravity="center"
							android:textSize="20dp"/>

						<ImageView
							android:id="@+id/material2"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:src="@drawable/coin"/>

						<ImageView
							android:id="@+id/tick2"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:layout_marginLeft="50dp"
							android:src="@drawable/tick"/>


					</LinearLayout>
				</RelativeLayout>
				<RelativeLayout
					android:id="@+id/line3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:orientation="horizontal">

						<TextView
							android:id="@+id/quantity3"
							android:layout_width="75dp"
							android:layout_height="wrap_content"
							android:text="125"
							android:gravity="center"
							android:textSize="20dp"/>

						<ImageView
							android:id="@+id/material3"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:src="@drawable/coin"/>

						<ImageView
							android:id="@+id/tick3"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:layout_marginLeft="50dp"
							android:src="@drawable/tick"/>


					</LinearLayout>
				</RelativeLayout>
				<RelativeLayout
					android:id="@+id/line4"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:orientation="horizontal">

						<TextView
							android:id="@+id/quantity4"
							android:layout_width="75dp"
							android:layout_height="wrap_content"
							android:text="125"
							android:gravity="center"
							android:textSize="20dp"/>

						<ImageView
							android:id="@+id/material4"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:src="@drawable/coin"/>

						<ImageView
							android:id="@+id/tick4"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:layout_marginLeft="50dp"
							android:src="@drawable/tick"/>


					</LinearLayout>
				</RelativeLayout>
				<RelativeLayout
					android:id="@+id/line5"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:orientation="horizontal">

						<TextView
							android:id="@+id/quantity5"
							android:layout_width="75dp"
							android:layout_height="wrap_content"
							android:text="125"
							android:gravity="center"
							android:textSize="20dp"/>

						<ImageView
							android:id="@+id/material5"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:src="@drawable/coin"/>

						<ImageView
							android:id="@+id/tick5"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:layout_marginLeft="50dp"
							android:src="@drawable/tick"/>


					</LinearLayout>
				</RelativeLayout>
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:orientation="horizontal">

						<TextView
							android:id="@+id/duration"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="duration: 5 mins"
							android:textSize="20dp"/>


					</LinearLayout>
				</RelativeLayout>
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:orientation="horizontal">

						<TextView
							android:id="@+id/amount"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Qty: 6"
							android:textSize="20dp"/>


					</LinearLayout>
				</RelativeLayout>
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp">

					<Button
						android:id="@+id/start"
						android:layout_width="wrap_content"
						android:minWidth="250dp"
						android:layout_height="50dp"
						android:layout_centerHorizontal="true"
						android:enabled="true"
						android:textAllCaps="false"
						android:text="Start"/>



				</RelativeLayout>

			</LinearLayout>


		</LinearLayout>




	</android.support.v7.widget.CardView>

</LinearLayout>