<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

	<android.support.v7.widget.CardView
		android:id="@+id/card_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="center"
		android:layout_margin="5dp"
		android:elevation="3dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<RelativeLayout
				android:id="@+id/factory"
				android:layout_width="match_parent"
				android:layout_height="125dp"
				android:background="@color/red">


				<LinearLayout
					android:layout_width="110dp"
					android:layout_height="110dp"
					android:background="#8c8c8c8c"
					android:layout_marginLeft="15dp"
					android:paddingLeft="5dp"
					android:paddingRight="5dp"
					android:layout_centerVertical="true"
					android:gravity="center_vertical"
					android:orientation="vertical">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="left"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@android:color/white"
							android:textSize="20dp"
							android:text="100 points"/>
						<!--ImageView
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:src="@drawable/coin"/-->

					</LinearLayout>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@android:color/white"
							android:textSize="20dp"
							android:text="100 coins"/>



					</LinearLayout>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@android:color/white"
							android:textSize="20dp"
							android:text="1 rupee"/>

					</LinearLayout>


				</LinearLayout>

				<TextView
					android:id="@+id/time_left"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_alignParentBottom="true"
					android:text="Time Left: 02:50:10:05 "
					android:textColor="@android:color/white"
					android:textSize="16dp"/>

				<TextView
					android:id="@+id/qty"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_above="@+id/time_left"
					android:text="Qty: 100/500 "
					android:textColor="@android:color/white"
					android:textSize="16dp"/>

				<LinearLayout
					android:id="@+id/level_lock"
					android:layout_width="match_parent"
					android:layout_height="125dp"
					android:background="#8c8c8c8c"
					android:gravity="center"
					android:orientation="horizontal">

					<ImageView
						android:layout_width="35dp"
						android:layout_height="35dp"
						android:src="@drawable/lock"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="35dp"
						android:textStyle="bold"
						android:text="LEVEL 25"/>


				</LinearLayout>

			</RelativeLayout>

			<ProgressBar
				android:id="@+id/loading_details"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:indeterminate="true"
				style="?android:attr/progressBarStyleHorizontal"/>

			<LinearLayout
				android:id="@+id/task_details"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:visibility="gone"
				android:orientation="vertical">

				<RelativeLayout
					android:id="@+id/line1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:orientation="horizontal">

						<TextView
							android:id="@+id/quantity1"
							android:layout_width="75dp"
							android:layout_height="wrap_content"
							android:text="9"
							android:gravity="center"
							android:textSize="20dp"/>

						<ImageView
							android:id="@+id/material1"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:src="@drawable/t15"/>

						<ImageView
							android:id="@+id/tick1"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:layout_marginLeft="50dp"
							android:src="@drawable/tick"/>


					</LinearLayout>
				</RelativeLayout>

				<RelativeLayout
					android:id="@+id/line2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:orientation="horizontal">

						<TextView
							android:id="@+id/quantity2"
							android:layout_width="75dp"
							android:layout_height="wrap_content"
							android:text="125"
							android:gravity="center"
							android:textSize="20dp"/>

						<ImageView
							android:id="@+id/material2"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:src="@drawable/coin"/>

						<ImageView
							android:id="@+id/tick2"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:layout_marginLeft="50dp"
							android:src="@drawable/tick"/>


					</LinearLayout>
				</RelativeLayout>
				<RelativeLayout
					android:id="@+id/line3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:orientation="horizontal">

						<TextView
							android:id="@+id/quantity3"
							android:layout_width="75dp"
							android:layout_height="wrap_content"
							android:text="125"
							android:gravity="center"
							android:textSize="20dp"/>

						<ImageView
							android:id="@+id/material3"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:src="@drawable/coin"/>

						<ImageView
							android:id="@+id/tick3"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:layout_marginLeft="50dp"
							android:src="@drawable/tick"/>


					</LinearLayout>
				</RelativeLayout>
				<RelativeLayout
					android:id="@+id/line4"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:orientation="horizontal">

						<TextView
							android:id="@+id/quantity4"
							android:layout_width="75dp"
							android:layout_height="wrap_content"
							android:text="125"
							android:gravity="center"
							android:textSize="20dp"/>

						<ImageView
							android:id="@+id/material4"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:src="@drawable/coin"/>

						<ImageView
							android:id="@+id/tick4"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:layout_marginLeft="50dp"
							android:src="@drawable/tick"/>


					</LinearLayout>
				</RelativeLayout>
				<RelativeLayout
					android:id="@+id/line5"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:orientation="horizontal">

						<TextView
							android:id="@+id/quantity5"
							android:layout_width="75dp"
							android:layout_height="wrap_content"
							android:text="125"
							android:gravity="center"
							android:textSize="20dp"/>

						<ImageView
							android:id="@+id/material5"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:src="@drawable/coin"/>

						<ImageView
							android:id="@+id/tick5"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:layout_marginLeft="50dp"
							android:src="@drawable/tick"/>


					</LinearLayout>
				</RelativeLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="20dp">

					<Button
						android:id="@+id/Redeem"
						android:layout_width="250dp"
						android:layout_height="50dp"
						android:layout_centerHorizontal="true"
						android:enabled="true"
						android:drawableRight="@drawable/indicator_w"
						android:text="Redeem"/>



				</RelativeLayout>

			</LinearLayout>


		</LinearLayout>




	</android.support.v7.widget.CardView>

</LinearLayout>