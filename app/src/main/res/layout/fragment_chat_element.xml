<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="74dp"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:background="@android:color/white"
                android:descendantFocusability="blocksDescendants"
                android:id="@+id/chatlist_element" >

	<ImageView
		android:id="@+id/contact_image"
		android:layout_width="54dp"
		android:layout_height="54dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginRight="15dp"
		android:src="@drawable/person"
		android:background="@color/gray"
		android:adjustViewBounds="true"
		android:focusable="false" />

	<TextView
		android:id="@+id/contact_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@+id/contact_image"
		android:layout_marginBottom="5dp"
		android:layout_toRightOf="@+id/contact_image"
		android:ellipsize="end"
		android:lines="1"
		android:text="+919005835708"
		android:textColor="#000000"
		android:textSize="16sp" />

	<github.ankushsachdeva.emojicon.EmojiconTextView
		android:id="@+id/lastpost"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/contact_image"
		android:layout_below="@id/contact_name"
		android:ellipsize="end"
		android:lines="1"
		android:text=""
		android:textColor="#666"
		android:textSize="14sp" />

	<TextView
		android:id="@+id/lastposttime"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBaseline="@+id/contact_name"
		android:layout_alignBottom="@+id/contact_name"
		android:layout_alignParentRight="true"
		android:ellipsize="end"
		android:lines="1"
		android:text="12:00a.m"
		android:textColor="#666"
		android:textSize="12sp" />

	<TextView
		android:id="@+id/unread_chat_count"
		android:layout_width="25sp"
		android:layout_height="25sp"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_below="@id/lastposttime"
		android:layout_marginEnd="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="4dp"
		android:background="@drawable/round_bg"
		android:gravity="center"
		android:maxLines="1"
		android:textColor="@android:color/white"
		android:textSize="12sp"
		tools:text="235" />

</RelativeLayout>